<%layout("/layouts/boilerplate.ejs")%>
<link href="../css/style.css" rel="stylesheet">
    <div class="row mt-3">
        <div class="col-8 offset-2">
            <h3>Edit your Listing</h3>
            <form method="POST" action="/<%=business._id%>?_method=PUT" novalidate class="needs-validation" enctype="multipart/form-data">
                <div class="mb-3">
                     <label for="newTitle" class="form-label">Title:</label>
            <textarea id="newTitle" name="title" placeholder="Enter title here" class="form-control" required><%=business.title%></textarea>
                </div>
               <div class="mb-3">
        <label for="newDescription" class="form-label">Description:</label>
            <textarea id="newDescription" name="description" placeholder="Enter Description here" class="form-control" required><%=business.description%></textarea>
               </div>
               <div class="mb-3">
                <img src="<%=orgImg%>">
               </div>
               <div class="mb-3">
                 <label for="newImage" class="form-label">Image Url:</label>
            <input id="newImage" name="image" placeholder="Enter Image url here" class="form-control" type="file">
               </div>
           <div class="row">
            <div class="mb-3 col-md-4">
                <label for="newContact" class="form-label">Contact no.:</label>
            <textarea id="newContact" name="contact" placeholder="new contact number" type="number" class="form-control" required><%=business.contact%></textarea>
               </div>
                <div class="mb-3 col-md-8">
                <label for="newcity" class="form-label">city:</label>
            <textarea id="newcity" name="city" placeholder="Enter city here" class="form-control" required><%=business.city%></textarea>
               </div>
           </div>
               <div class="mb-3">
                <label for="newLocation" class="form-label">Location:</label>
            <textarea id="newLocation" name="location" placeholder="Enter location here" class="form-control" required><%=business.location%></textarea>
               </div>
            <button class=" btn btn-dark edit-btn mt-3 ">Update</button>
            </form>
                </div>
            </div>
            
       